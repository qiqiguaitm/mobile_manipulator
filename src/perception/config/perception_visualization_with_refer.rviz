Panels:
  - Class: rviz/Displays
    Help Height: 78
    Name: Displays
    Property Tree Widget:
      Expanded:
        - /Global Options1
        - /TF1
        - /Robot Model1
        - /Hand Grasp Detection1
        - /Hand Referring Detection1
      Splitter Ratio: 0.6
    Tree Height: 700
  - Class: rviz/Time
    Name: Time
    SyncMode: 0
    SyncSource: ""
Visualization Manager:
  Class: ""
  Displays:
    - Alpha: 0.5
      Cell Size: 1
      Class: rviz/Grid
      Color: 160; 160; 164
      Enabled: true
      Line Style:
        Line Width: 0.03
        Value: Lines
      Name: Grid
      Normal Cell Count: 0
      Offset:
        X: 0
        Y: 0
        Z: 0
      Plane: XY
      Plane Cell Count: 10
      Reference Frame: <Fixed Frame>
      Value: true
    
    # TF显示
    - Class: rviz/TF
      Enabled: true
      Frame Timeout: 15
      Frames:
        All Enabled: false
        base_link:
          Value: true
        mobile_base:
          Value: true
        arm_base:
          Value: true
        camera2_link:
          Value: true
        camera2_depth_frame:
          Value: true
        camera2_color_frame:
          Value: true
        camera2_depth_optical_frame:
          Value: true
        camera2_color_optical_frame:
          Value: true
      Marker Scale: 0.3
      Name: TF
      Show Arrows: true
      Show Axes: true
      Show Names: true
      Tree:
        {}
      Update Interval: 0
      Value: true
    
    # 机器人模型
    - Alpha: 1
      Class: rviz/RobotModel
      Collision Enabled: false
      Enabled: true
      Links:
        All Links Enabled: true
        Expand Joint Details: false
        Expand Link Details: false
        Expand Tree: false
        Link Tree Style: Links in Alphabetic Order
      Name: Robot Model
      Robot Description: robot_description
      TF Prefix: ""
      Update Interval: 0
      Value: true
      Visual Enabled: true
    
    # ==== 手部相机抓取检测 ====
    - Class: rviz/Group
      Displays:
        # 2D可视化图像
        - Class: rviz/Image
          Enabled: true
          Image Topic: /perception/hand/vis_image
          Max Value: 1
          Median window: 5
          Min Value: 0
          Name: Grasp 2D Visualization
          Normalize Range: true
          Queue Size: 1
          Transport Hint: compressed
          Unreliable: false
          Value: true
        
        # 3D抓取标记
        - Class: rviz/MarkerArray
          Enabled: true
          Marker Topic: /perception/hand/grasp_markers
          Name: Grasp 3D Markers
          Namespaces:
            grasp_bbox: true
            grasp_poses: true
            touching_points: true
            labels: true
          Queue Size: 100
          Value: true
        
        # 3D抓取点云
        - Alpha: 1
          Autocompute Intensity Bounds: true
          Autocompute Value Bounds:
            Max Value: 10
            Min Value: -10
            Value: true
          Axis: Z
          Channel Name: intensity
          Class: rviz/PointCloud2
          Color: 0; 255; 0
          Color Transformer: FlatColor
          Decay Time: 0
          Enabled: true
          Invert Rainbow: false
          Max Color: 255; 255; 255
          Min Color: 0; 0; 0
          Name: Grasp Points
          Position Transformer: XYZ
          Queue Size: 10
          Selectable: true
          Size (Pixels): 5
          Size (m): 0.01
          Style: Points
          Topic: /perception/hand/grasp_points
          Unreliable: false
          Use Fixed Frame: true
          Use rainbow: true
          Value: true
      Enabled: true
      Name: Hand Grasp Detection
    
    # ==== 手部相机Referring检测 ====
    - Class: rviz/Group
      Displays:
        # Referring 2D可视化图像
        - Class: rviz/Image
          Enabled: true
          Image Topic: /perception/hand/referring_vis
          Max Value: 1
          Median window: 5
          Min Value: 0
          Name: Referring 2D Visualization
          Normalize Range: true
          Queue Size: 1
          Transport Hint: raw
          Unreliable: false
          Value: true
        
        # Referring 3D标记
        - Class: rviz/MarkerArray
          Enabled: true
          Marker Topic: /perception/hand/referring_markers
          Name: Referring 3D Markers
          Namespaces:
            refer_bbox: true
            refer_labels: true
          Queue Size: 100
          Value: true
        
        # Referring 3D点云
        - Alpha: 1
          Autocompute Intensity Bounds: true
          Autocompute Value Bounds:
            Max Value: 10
            Min Value: -10
            Value: true
          Axis: Z
          Channel Name: intensity
          Class: rviz/PointCloud2
          Color: 255; 255; 0
          Color Transformer: FlatColor
          Decay Time: 0
          Enabled: true
          Invert Rainbow: false
          Max Color: 255; 255; 255
          Min Color: 0; 0; 0
          Name: Referring Points
          Position Transformer: XYZ
          Queue Size: 10
          Selectable: true
          Size (Pixels): 5
          Size (m): 0.01
          Style: Points
          Topic: /perception/hand/referring_points
          Unreliable: false
          Use Fixed Frame: true
          Use rainbow: true
          Value: true
      Enabled: true
      Name: Hand Referring Detection
    
    # ==== 顶部相机Referring检测（如果启用） ====
    - Class: rviz/Group
      Displays:
        - Class: rviz/Image
          Enabled: true
          Image Topic: /perception/top/referring_vis
          Max Value: 1
          Median window: 5
          Min Value: 0
          Name: Top Referring 2D
          Normalize Range: true
          Queue Size: 1
          Transport Hint: raw
          Unreliable: false
          Value: true
        
        - Class: rviz/MarkerArray
          Enabled: true
          Marker Topic: /perception/top/referring_markers
          Name: Top Referring 3D Markers
          Namespaces:
            {}
          Queue Size: 100
          Value: true
      Enabled: false
      Name: Top Referring Detection
      
  Enabled: true
  Global Options:
    Background Color: 48; 48; 48
    Default Light: true
    Fixed Frame: base_link
    Frame Rate: 30
  Name: root
  Tools:
    - Class: rviz/Interact
      Hide Inactive Objects: true
    - Class: rviz/MoveCamera
    - Class: rviz/Select
    - Class: rviz/FocusCamera
    - Class: rviz/Measure
  Value: true
  Views:
    Current:
      Class: rviz/Orbit
      Distance: 3
      Enable Stereo Rendering:
        Stereo Eye Separation: 0.06
        Stereo Focal Distance: 1
        Swap Stereo Eyes: false
        Value: false
      Focal Point:
        X: 0.5
        Y: 0
        Z: 0.5
      Focal Shape Fixed Size: true
      Focal Shape Size: 0.05
      Invert Z Axis: false
      Name: Current View
      Near Clip Distance: 0.01
      Pitch: 0.52
      Target Frame: <Fixed Frame>
      Value: Orbit (rviz)
      Yaw: 5.5
    Saved: ~
Window Geometry:
  Displays:
    collapsed: false
  Grasp 2D Visualization:
    collapsed: false
  Height: 1016
  Hide Left Dock: false
  Hide Right Dock: false
  QMainWindow State: 
  Referring 2D Visualization:
    collapsed: false
  Time:
    collapsed: false
  Top Referring 2D:
    collapsed: false
  Width: 1848
  X: 72
  Y: 27