<launch>
  <!-- 加载话题配置 -->
  <rosparam file="$(find arm_planner)/config/topics.yaml" command="load" />
  
  <!-- ArmPlanner 节点 -->
  <node pkg="arm_planner" type="arm_planner_node.py" name="arm_planner" output="screen">
    <remap from="/map/octomap" to="/map/octomap" />
    <remap from="/chassis/pose" to="/chassis/pose" />
    <remap from="/task_mgr/target_object/pose" to="/task_mgr/target_object/pose" />
    <remap from="/arm/joint_states" to="/arm/joint_states" />
    <remap from="/arm/trajectory" to="/arm/trajectory" />
    <remap from="/arm/end_pose" to="/arm/end_pose" />
  </node>
  
</launch>