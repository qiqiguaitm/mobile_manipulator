<launch>
  <!-- Define the MoveIt controller manager plugin to use for trajectory execution -->
  <param name="moveit_controller_manager" value="moveit_simple_controller_manager/MoveItSimpleControllerManager" />

  <!-- Load controller list to the parameter server -->
  <rosparam file="$(find piper_with_gripper_moveit)/config/simple_moveit_controllers.yaml" />
  <!-- Also load real_controllers.yaml for proper controller configuration -->
  <rosparam file="$(find piper_with_gripper_moveit)/config/real_controllers.yaml" />
</launch>
