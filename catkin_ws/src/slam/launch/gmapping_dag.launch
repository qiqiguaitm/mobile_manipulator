<launch>
  <!-- 1. 启动底盘（基础模块，无前置依赖） -->
  <include file="$(find tracer_base)/launch/tracer_base.launch" name="tracer_base">
    <tag name="base_ready"/>  <!-- 底盘就绪标记 -->
  </include>

  <!-- 2. 启动IMU（依赖底盘启动完成） -->
  <include file="$(find imu_launch)/launch/imu_msg.launch" name="imu_node" depends="base_ready">
    <tag name="imu_ready"/>  <!-- IMU就绪标记 -->
  </include>

  <!-- 3. 启动RS16激光雷达（依赖底盘启动完成） -->
  <include file="$(find tracer_bringup)/launch/open_lidar.launch" name="lidar_node" depends="base_ready">
    <tag name="lidar_ready"/>  <!-- 激光雷达就绪标记 -->
  </include>

  <!-- 4. 启动gmapping建图（依赖IMU和激光雷达均就绪） -->
  <include file="$(find tracer_bringup)/launch/gmapping.launch" name="gmapping_node" depends="imu_ready,lidar_ready">
    <!-- 建图模块无需额外标记，依赖满足后自动启动 -->
  </include>
</launch>

    
